{% if section.settings.adjust_fonts %}
<style>
  .section-{{section.id}} .faq-question {
    font-size: {{ section.settings.faq-question}}px;
  }
  .section-{{section.id}} .allcaps {
    font-size: {{ section.settings.allcaps}}px;
  }
  .section-{{section.id}} .b-14-r  {
    font-size: {{ section.settings.b-14-r }}px;
  }
</style>
{% endif %}
<div class="container-fluid">
    <div class="container">
        <div class="faq-block" id="{{section.settings.block_id}}">
            <div class="faq-block-head">
                <p class="allcaps">{{section.settings.title}}</p>
            </div>
            <div class="faq-items">
                {% for block in section.blocks %}
                <div class="faq-item open-tab">
                    <p class="faq-question">{{block.settings.question}}</p>
                    <div class="faq-answer">
                        <p class="b-14-r">{{block.settings.answer | replace: '<p>','' | replace: '</p>', ''}}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
    "name": "FAQ Block",
    "class": "faq-section",
    "settings": [
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "block_id",
        "label": "Block ID"
      },
      {
        "type": "checkbox",
        "id": "adjust_fonts",
        "label": "Adjust Font Sizes?",
        "default": false
      },
      {
        "type": "header",
        "content": "Desktop Heading Font Sizes"
      },
      {
        "type": "range",
        "id": "faq-question",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Question Font Size",
        "default": 18
      },
      {
        "type": "range",
        "id": "allcaps",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Section Title Font size",
        "default": 14
      },
      {
        "type": "range",
        "id": "b-14-r",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Regular Font size",
        "default": 14
      }
    ],
    "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Question?"
        },
        {
            "type":"richtext",
            "id": "answer",
            "label": "Answer",
            "default": "<p>Answer</p>" 
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "FAQ",
      "name": "faq",
      "settings": {},
      "blocks": [
        {
          "type": "faq",
          "settings": {}
        },
        {
          "type": "faq",
          "settings": {}
        },
        {
          "type": "faq",
          "settings": {}
        },
        {
          "type": "faq",
          "settings": {}
        }
      ]
    }
  ]
}
{% endschema %}
  