"name": "Artist Collection",
"settings": [
{
"type": "header",
"content": "Text"
},
{
"type": "checkbox",
"id": "show_artist_block",
"label": "Show Artist Story Box",
"default": true
},
{
"type": "text",
"id": "artist_title",
"label": "Title",
"default": "Artist Title"
},
{
"type": "textarea",
"id": "artist_description",
"label": "Text",
"default": "Artist Description"
},
{
"type": "text",
"id": "artist_cta",
"label": "Read Story",
"default": "Read Story"
},
{
"type": "url",
"id": "artist_cta_url",
"label": "Add Url"
},
{
"type": "header",
"content": "More Photographers"
},
{
"type": "text",
"id": "more",
"label": "Text",
"default": "More Unceil photographers"
},
{
